                                        <asp:ListItem Value="~/About.aspx">About</asp:ListItem>
                                        <asp:ListItem Value="~/Blog/Default.aspx">Blog</asp:ListItem>
                                    </asp:BulletedList>
                                </AnonymousTemplate>
                                <LoggedInTemplate>
